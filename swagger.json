{
  "openapi": "3.0.0",
  "info": {
    "title": "Interface Swagger para Gerência de Produtos",
    "version": "1.0.0",
    "description": "Documentação da API."
  },
  "paths": {
    "/cadastrarProduto": {
      "post": {
        "summary": "Cadastrar Produto",
        "description": "Cadastra um novo produto.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": { "type": "string" },
                  "descricao": { "type": "string" },
                  "preco": { "type": "number" },
                },
                "required": [
                  "nome",
                  "preco",
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Produto adicionado."
          }
        }
      }
    },
    "/lerProduto/{nome}": {
      "get": {
        "summary": "Ler Produto",
        "description": "Obtém dados de um produto.",
        "parameters": [
          {
            "name": "nome",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso.",
            "content": {
              "application/json": {
                "example": {
                  "nome": "Acai",
                  "descricao": "Acai 100% natural 500ml",
    							"preco": 26.99,
									"id":1
                }
              }
            }
          },
          "404": {
            "description": "Produto não encontrado.",
            "content": {
              "text/plain": {
                "example": {
                  "error": "Produto não encontrado."
                }
              }
            }
          }
        }
      }
    },
    "/atualizarProduto": {
      "post": {
        "summary": "Atualizar Produto",
        "description": "Atualizar dados de um produto.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
									"nome": {
										"type": "string"
									},
									"descricao": {
										"type": "string"
									},
									"preco": {
										"type": "number"
									},
                  "id": { "type": "number" }
                },
                "required": ["id"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Produto atualizado com sucesso",
            "content": {
              "application/json": {
                "example": {
									"nome": "Acai",
									"descricao": "Acai 100% natural 250ml",
									"preco": 26.99,
									"id": 1
                }
              }
            }
          },
          "404": {
            "description": "Produto não encontrado.",
            "content": {
              "text/plain": {
                "example": {
                  "error": "Produto não encontrado."
                }
              }
            }
          }
        }
      }
    },
    "/deletarProduto/{id}": {
      "delete": {
        "summary": "Deletar Produto",
        "description": "Delete dados de um produto.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Produto deletado."
          },
          "404": {
            "description": "Produto não encontrado.",
            "content": {
              "text/plain": {
                "example": {
                  "error": "Produto não encontrado."
                }
              }
            }
          }
        }
      }
    }
  }
}